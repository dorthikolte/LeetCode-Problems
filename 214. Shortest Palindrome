class Solution {
    public String shortestPalindrome(String s) {
        if (s == null || s.length() <= 1) {
            return s;
        }

        String rev = new StringBuilder(s).reverse().toString();
        String combined = s + "#" + rev;

        int[] lps = buildLPS(combined);

        // Length of longest palindromic prefix
        int palPrefixLen = lps[combined.length() - 1];

        // Characters to add in front
        String toAdd = s.substring(palPrefixLen);
        return new StringBuilder(toAdd).reverse().toString() + s;
    }

    // Standard KMP LPS computation
    private int[] buildLPS(String str) {
        int[] lps = new int[str.length()];
        int len = 0; // length of previous longest prefix suffix

        for (int i = 1; i < str.length(); i++) {
            while (len > 0 && str.charAt(i) != str.charAt(len)) {
                len = lps[len - 1];
            }
            if (str.charAt(i) == str.charAt(len)) {
                len++;
            }
            lps[i] = len;
        }
        return lps;
    }
}
