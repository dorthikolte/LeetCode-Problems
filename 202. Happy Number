class Solution {
    public boolean isHappy(int n) {
        int slow = n, fast = n;

        while (true) {
            slow = next(slow);          // move 1 step
            fast = next(next(fast));   // move 2 steps

            if (fast == 1) return true; // reached happy state
            if (slow == fast) return false; // cycle detected
        }
    }

    private int next(int num) {
        int sum = 0;
        while (num > 0) {
            int d = num % 10;
            sum += d * d;
            num /= 10;
        }
        return sum;
    }
}
