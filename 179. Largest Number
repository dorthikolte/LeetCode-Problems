import java.util.Arrays;
import java.util.Comparator;

class Solution {
    public String largestNumber(int[] nums) {
        // Convert to strings
        String[] s = new String[nums.length];
        for (int i = 0; i < nums.length; ++i) s[i] = String.valueOf(nums[i]);
        
        // Sort with custom comparator: order by concatenation result descending
        Arrays.sort(s, new Comparator<String>() {
            public int compare(String a, String b) {
                // If a+b is larger than b+a, a should come before b -> return negative for descending using b+a.compareTo(a+b)
                return (b + a).compareTo(a + b);
            }
        });
        
        // If the largest is "0", the whole number is "0"
        if (s.length > 0 && s[0].equals("0")) return "0";
        
        // Join
        StringBuilder sb = new StringBuilder();
        for (String part : s) sb.append(part);
        return sb.toString();
    }
}
