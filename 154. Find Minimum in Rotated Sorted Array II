class Solution {
    public int findMin(int[] nums) {
        int l = 0, r = nums.length - 1;

        while (l < r) {
            int mid = l + (r - l) / 2;

            if (nums[mid] > nums[r]) {
                l = mid + 1;        // Minimum is in the right half
            } else if (nums[mid] < nums[r]) {
                r = mid;            // Minimum is in the left half (including mid)
            } else {
                r--;                // nums[mid] == nums[r], can't decide, shrink range
            }
        }

        return nums[l];
    }
}
