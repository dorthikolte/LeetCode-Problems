class Solution {
    public int maxProfit(int k, int[] prices) {
        int n = prices.length;
        if (n == 0 || k == 0) return 0;

        // If k is large enough, it's equivalent to unlimited transactions
        if (k >= n / 2) {
            int profit = 0;
            for (int i = 1; i < n; i++) {
                if (prices[i] > prices[i - 1]) {
                    profit += prices[i] - prices[i - 1];
                }
            }
            return profit;
        }

        // dp[t][d] = max profit using at most t transactions up to day d
        int[][] dp = new int[k + 1][n];

        for (int t = 1; t <= k; t++) {
            int maxDiff = -prices[0]; // best of (dp[t-1][m] - prices[m]) so far
            for (int d = 1; d < n; d++) {
                // Either we do nothing on day d, or we sell on day d
                dp[t][d] = Math.max(dp[t][d - 1], prices[d] + maxDiff);

                // Update maxDiff for next days:
                // best (dp[t-1][m] - prices[m]) up to day d
                maxDiff = Math.max(maxDiff, dp[t - 1][d] - prices[d]);
            }
        }

        return dp[k][n - 1];
    }
}
