class Solution {
    public void rotate(int[] nums, int k) {
        if (nums == null || nums.length < 2) return;
        int n = nums.length;
        k = k % n;
        if (k == 0) return;
        // reverse whole array
        reverse(nums, 0, n - 1);
        // reverse first k
        reverse(nums, 0, k - 1);
        // reverse remaining n-k
        reverse(nums, k, n - 1);
    }

    private void reverse(int[] a, int i, int j) {
        while (i < j) {
            int t = a[i];
            a[i] = a[j];
            a[j] = t;
            i++;
            j--;
        }
    }
}
