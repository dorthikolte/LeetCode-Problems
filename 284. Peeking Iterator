import java.util.Iterator;

class PeekingIterator implements Iterator<Integer> {

    private Iterator<Integer> iterator;
    private Integer nextVal; // cache for next element

    public PeekingIterator(Iterator<Integer> iterator) {
        this.iterator = iterator;

        // Preload first element if exists
        if (iterator.hasNext()) {
            nextVal = iterator.next();
        } else {
            nextVal = null;
        }
    }

    // Returns the next element without advancing
    public Integer peek() {
        return nextVal;
    }

    @Override
    public Integer next() {
        Integer current = nextVal;

        // Load next value
        if (iterator.hasNext()) {
            nextVal = iterator.next();
        } else {
            nextVal = null;
        }

        return current;
    }

    @Override
    public boolean hasNext() {
        return nextVal != null;
    }
}
