class Solution {
    public int findPeakElement(int[] nums) {
        int left = 0, right = nums.length - 1;
        while (left < right) {
            int mid = left + (right - left) / 2;
            if (nums[mid] > nums[mid + 1]) {
                // peak is at mid or to the left
                right = mid;
            } else {
                // peak is to the right of mid
                left = mid + 1;
            }
        }
        return left;
    }
}
