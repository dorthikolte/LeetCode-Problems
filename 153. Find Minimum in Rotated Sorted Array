class Solution {
    public int findMin(int[] nums) {
        int l = 0, r = nums.length - 1;

        // If the array is not rotated (or rotated n times), smallest is at l
        if (nums[l] <= nums[r]) return nums[l];

        while (l < r) {
            int mid = l + (r - l) / 2;
            if (nums[mid] > nums[r]) {
                // min is in right half
                l = mid + 1;
            } else {
                // min is at mid or in left half
                r = mid;
            }
        }
        return nums[l];
    }
}
